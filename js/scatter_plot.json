{
  "$schema": "https://vega.github.io/schema/vega-lite/v4.json",
  "data": {
    "url": "https://raw.githubusercontent.com/williamamccallum/FIT3179/main/data/Education_Summary.csv"
  },
  "hconcat": [
    {
      "encoding": {
        "color": {
          "condition": {
            "selection": "brush",
            "title": "Continent",
            "field": "Continent",
            "type": "nominal",
            "scale": {
              "domain": ["Asia", "Africa", "Europe",  "Oceania", "South America", "North America"],
              "range": ["#EB364E", "#E89C1A", "#07BAA3", "#515BE8", "#22801B", "#B72EE8"]
            }
          },
          "value": "lightgray"
        },
        "x": {
          "field": "Education",
          "type": "quantitative",
          "title": "Avg. Education (Years)"
        },
        "y": {
          "title": "Life Expectancy (Years)",
          "field": "Life Expectancy",
          "scale": {"domain": [0, 90]},
          "type": "quantitative"
        }
      },
      "width": 580,
      "height": 300,
      "mark": {"type" :"circle" , "tooltip": {"content": "data"}} ,
      "selection": {"brush": {"type": "interval"}},
      "transform": [{"filter" :{"field": "Gender", "oneOf": ["Total"]}}]
    },
{
      "encoding": {
        "color": {
          "condition": {
            "selection": "brush",
            "title": "Continent",
            "field": "Continent",
            "type": "nominal",
            "scale": {
              "domain": ["Asia", "Africa", "Europe",  "Oceania", "South America", "North America"],
              "range": ["#EB364E", "#E89C1A", "#07BAA3", "#515BE8", "#22801B", "#B72EE8"]
            }
          },
          "value": "lightgray"
        },
        "x": {
          "field": "Education",
          "type": "quantitative",
          "title": "Avg. Education (Years)"
        },
        "y": {
          "title": "Avg Income ($USD 2010)",
          "field": "Avg Income",
          "scale": {"domain": [0, 100000]},
          "type": "quantitative"
        }
      },
      "width": 580,
      "height": 300,
      "mark": {"type" :"circle" , "tooltip": {"content": "data"}} ,
      "selection": {"brush": {"type": "interval"}},
      "transform": [{"filter" :{"field": "Gender", "oneOf": ["Total"]}}]
    }
  ]
}
