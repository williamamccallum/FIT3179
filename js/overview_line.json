{
  "$schema": "https://vega.github.io/schema/vega-lite/v4.json",
  "data": {
    "url": "https://raw.githubusercontent.com/williamamccallum/FIT3179/main/data/Education_Years.csv"
  },
  "transform": [
    {
      "filter": {
        "field": "Country",
        "oneOf": [
          "Australia",
          "New Zealand",
          "Japan",
          "China",
          "United Kingdom",
          "Finland",
          "Gambia",
          "Mozambique",
          "Canada",
          "Mexico",
          "Brazil",
          "Peru"
        ]
      }
    }
  ],
  "hconcat" : [{
  "encoding": {"x": {"field": "Year", "type": "quantitative"}},
  "layer": [
    {
      "width": 880,
      "height": 300,
      "encoding": {
        "color": {"field": "Country", "type": "nominal",
            "scale": {
              "domain": [
                "Japan",
                "Gambia",
                "United Kingdom",
                "Australia",
                "Brazil",
                "Canada",
                "China",
                "Mozambique",
                "Finland",
                "New Zealand",
                "Peru",
                "Mexico",
                "Asia",
                "Africa",
                "Europe",
                "Oceania",
                "South America",
                "North America"
              ],
              "range": [
                "#EB364E",
                "#E89C1A",
                "#07BAA3",
                "#515BE8",
                "#22801B",
                "#B72EE8"
              ]
            }},
        "y": {
          "field": "Education",
          "type": "quantitative",
          "title": "Avg. Years of Education"
        }
      },
      "layer": [
        {"mark": "line"},
        {"transform": [{"filter": {"selection": "hover"}}], "mark": "point"}
      ]
    },
    {
      "transform": [
        {"pivot": "Country", "value": "Education", "groupby": ["Year"]}
      ],
      "mark": "rule",
      "encoding": {
        "opacity": {
          "condition": {"value": 0.3, "selection": "hover"},
          "value": 0
        },
        "tooltip": [
          {"field": "Australia", "type": "quantitative"},
          {"field": "New Zealand", "type": "quantitative"},
          {"field": "Canada", "type": "quantitative"},
          {"field": "Mexico", "type": "quantitative"},
          {"field": "Japan", "type": "quantitative"},
          {"field": "China", "type": "quantitative"},
          {"field": "United Kingdom", "type": "quantitative"},
          {"field": "Finland", "type": "quantitative"},
          {"field": "Gambia", "type": "quantitative"},
          {"field": "Mozambique", "type": "quantitative"},
          {"field": "Peru", "type": "quantitative"},
          {"field": "Brazil", "type": "quantitative"}
        ]
      },
      "selection": {
        "hover": {
          "type": "single",
          "fields": ["Year"],
          "nearest": true,
          "on": "mouseover",
          "empty": "none",
          "clear": "mouseout"
        }
      }
    }
  ]},{
    "mark": "circle",
    "encoding": {
    "y": {"field": "Continent",
    "axis": {
      "orient": "right"
      }
    },
    "color" :{
      "field": "Continent",
            "type": "nominal"
    }
  }
  }],
  "config": {"legend" :{"disable":true}}
}
