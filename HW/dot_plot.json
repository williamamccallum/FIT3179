{
  "$schema": "https://vega.github.io/schema/vega-lite/v4.json",
  "width": 800,
  "height": 2000,
  "title": "Average Education by Gender (2010)",
  "description": "A ranged dot plot that uses 'layer' to variances in education between genders for various countries",
  "data": {
    "url": "https://raw.githubusercontent.com/williamamccallum/FIT3179/main/HW/Education_Summary.csv"
  },
  "encoding": {
    "x": {
      "field": "Education",
      "type": "quantitative",
      "title": "Education (years)"
    },
    "y": {
      "field": "Country",
      "type": "nominal",
      "title": "Country",
      "axis": {"offset": 10, "ticks": false, "minExtent": 70, "domain": false}
    }
  },
  "layer": [
    {
      "mark": "line",
      "encoding": {
        "detail": {"field": "Country", "type": "nominal"},
        "color": {"value": "#7A41CE"},
        "tooltip": [
          {"field": "Country", "type": "nominal"},
          {  "field": "Education",
            "type": "quantitative",
            "format": ".2f"
          }
        ]
      }
    },
    {
      "mark": {"type": "point", "filled": true},
      "encoding": {
        "color": {
          "field": "gender",
          "type": "nominal",
          "scale": {
            "domain": ["Male", "Female"],
            "range": ["#3E90FC", "#F04987"]
          },
          "title": "Gender"
        },
        "size": {"value": 100},
        "opacity": {"value": 1},
        "tooltip": [
          {"field": "Country", "type": "nominal"},
          {"field": "gender", "type": "nominal"},
          {  "field": "Education",
            "type": "quantitative",
            "format": ".2f"
          }
        ]
      }
    }
  ]
}
